<link href="~/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-8">
        <h2>FICHE TECHNIQUE</h2>
    </div>
    <div class="col-lg-4">
        <div class="row pull-right" style="margin-right: 15px; margin-top: 15px;">
            <button type="button" class="btn btn-w-m btn-success" id="EditBtn">
                <i class="fa fa-check-square-o" aria-hidden="true" style="margin-right: 5px;"></i>Editer</button>
            <button type="button" class="btn btn-w-m btn-primary" id="PrintBtn">
                <i class="fa fa-print" aria-hidden="true" style="margin-right: 5px;"></i>Imprimer</button>

        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <p>
        <h1 style="display: inline;">@Model.CODE</h1>
        <strong>(DISPONIBLE)</strong>
    </p>
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-md-6">
                    <h3>TYPE:  <span class="text-success">@Model.TYPE</span></h3>
                </div>
                <div class="col-md-6">
                    <h3>DESIGNATION:  <span class="text-success">@Model.DESIGNATION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>FAMILLE: <span class="text-success">@Model.TYPE</span></h3>
                </div>
                <div class="col-md-6">
                    <h3>NATURE:  <span class="text-success">@Model.DESIGNATION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>DATE AQUISITION:  <span class="text-success">@Model.DATE_AQUISITION.ToShortDateString()</span></h3>
                </div>
                <div class="col-md-6">
                    <h3>DATE MISE EN SERVICE: <span class="text-success">@Model.DATE_MISE_EN_SERVICE.ToShortDateString()</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>VALEUR D'AQUISITION:  <span class="text-success">@Model.VALEUR_ACQUISITION_TTC</span></h3>
                </div>
                <div class="col-md-6">
                    <h3>FOURNISSEUR: <span class="text-success">@ViewBag.FOURNISSEUR</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>CODE A BARRE:  <span class="text-success">@Model.CODE_A_BARRE</span></h3>
                </div>
                <div class="col-md-6">
                    <img src='@Url.Action("ShowBarCode", "Immobilisation", new { Code = ViewBag.IMMOBILISATION })' class='img-responsive' />
                </div>
            </div>
            <hr />
            <h2>CARACTERISTIQUES TECHNIQUES</h2>
            <div class="row">
                <div class="col-md-12">
                    <h3>MARQUE: <span class="text-success">@ViewBag.MARQUE</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>DESCRIPTION:  <span class="text-success">@ViewBag.DESCRIPTION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>COMPOSITION: <span class="text-success">@ViewBag.COMPOSITION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>LIEU FABRICATION: <span class="text-success">@ViewBag.LIEU_FABRICATION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>DIMENSION: <span class="text-success">@ViewBag.DIMENSION</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>COULEUR</h3>
                </div>
                <div class="col-md-6" style="background-color:@ViewBag.COULEUR;height: 30px;">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>POID: <span class="text-success">@ViewBag.POID</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>PUISSANCE:  <span class="text-success">@ViewBag.PUISSANCE</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>CONSOMMATION:  <span class="text-success">@ViewBag.CONSOMMATION</span></h3>
                </div>
            </div>
            <hr />
            <h2>PHOTO</h2>
            <div class="col-md-12">
                <img src='@Url.Action("show", "Immobilisation", new { Code = ViewBag.IMMOBILISATION })' class='img-responsive' />
            </div>
        </div>
        <div class="col-lg-4">
            <h2>CODE QR</h2>
            <img src='@Url.Action("ShowCodeQr", "Immobilisation", new { Code = ViewBag.IMMOBILISATION })' class='img-responsive' style="
    width: 50%;" />

        </div>
    </div>
</div>
<script type="text/javascript">
    $("#EditBtn").click(function () {
        var MyValue = "@ViewBag.IMMOBILISATION";
        window.location.href = "/Immobilisation/EditerFicheTechnique?Code=" + MyValue;
    });
</script>


