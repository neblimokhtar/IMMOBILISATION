<link href="~/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>TIERS</h2>
        <ol class="breadcrumb">
            <li><a>TIERS</a> </li>
            <li class="active"><strong>@ViewBag.TITRE</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm("UploadFiche", "Immobilisation", new { FILTER = ViewBag.FILTER }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "FORM", enctype = "multipart/form-data" }))
    {

        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        IMMOBILISATION</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" value="@ViewBag.IMMOBILISATION" readonly>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        DESIGNATION</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" value="@ViewBag.DESIGNATION" readonly>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        FAMILLE</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" value="@ViewBag.FAMILLE" readonly>
                    </div>
                </div>
            </div>

        </div>
        <hr />
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        MARQUE</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="MARQUE" id="MARQUE" value="@Model.MARQUE">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="text-align: initial; padding-left: 0px;">
                        LIEU FABRICATION</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="LIEU_FABRICATION" id="LIEU_FABRICATION" value="@Model.LIEU_FABRICATION">
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="col-lg-2 control-label" style="padding-left: 0px; text-align: initial;">
                        DESCRIPTION/UTILISATION</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="DESCRIPTION" id="DESCRIPTION" value="@Model.DESCRIPTION">
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="col-lg-2 control-label" style="padding-left: 0px; text-align: initial;">
                        COMPOSITION/MATIERE</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="COMPOSITION" id="COMPOSITION" value="@Model.COMPOSITION">
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        DIMENSION</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="DIMENSION" id="DIMENSION" value="@Model.DIMENSION">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="text-align: initial; padding-left: 0px;">
                        POID</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="POID" id="POID" value="@Model.POID">
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        PUISSANCE</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="PUISSANCE" id="PUISSANCE" value="@Model.PUISSANCE">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="text-align: initial; padding-left: 0px;">
                        CONSOMMATION</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="CONSOMMATION" id="CONSOMMATION" value="@Model.CONSOMMATION">
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="text-align: initial; padding-left: 0px;">
                        COULEUR</label>
                    <div class="col-lg-8">
                        <div id="cp2" class="input-group colorpicker-component">
                            <input type="text" name="COULEUR" id="COULEUR" value="@Model.COULEUR" class="form-control" />
                            <span class="input-group-addon"><i></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <label class="col-lg-4 control-label" style="text-align: initial; padding-left: 0px;">
                        PHOTO</label>
                    <div class="btn-group col-lg-8">
                        <label title="Upload image file" for="fileupload" class="btn btn-primary">
                            <input type="file" accept="image/*" name="fileupload" id="fileupload" class="hide">
                            Télécharger une photo
                        </label>
                    </div>
                </div>
                <div class="row" id="dvPreview">
                </div>
            </div>
        </div>
        <div class="row pull-right" style="margin-right: 15px; margin-top: 15px;">
            <button type="button" class="btn btn-w-m btn-success" id="Valider"><i class="fa fa-check-square-o" aria-hidden="true"></i>Valider</button>
        </div>
    }
</div>
<script src="~/js/bootstrap-colorpicker.min.js"></script>
<script src="~/js/select2.min.js" type="text/javascript"></script>
<script src="~/js/jquery.browser.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        @*        var Mode = "@ViewBag.Mode";
        var TYPE = "@Model.TYPE";*@
        var Mode = "";
        var TYPE = "";
        $('#cp2').colorpicker();

        if (Mode == "Edit") {
            $("#TYPE option").filter(function () {
                return $(this).text() == TYPE;
            }).prop('selected', true);
        }
        $('#FORM').validate({
            rules: {
                TYPE: {
                    required: true
                },
                INTITULE: {
                    required: true
                },
            }
        });
    });
    $("#Valider").click(function () {
        var r = confirm("Voulez vous vraiment valider cette action ?");
        if (r == true) {
            $("form").submit();
        }
    });
    //-----------------------------------------------------------------------
    $(function () {
        $("#fileupload").change(function () {
            $("#dvPreview").html("");
            var regex = /^([a-zA-Z0-9\s_\\.\-:])+(.jpg|.jpeg|.gif|.png|.bmp)$/;
            if (regex.test($(this).val().toLowerCase())) {
                if ($.browser.msie && parseFloat(jQuery.browser.version) <= 9.0) {
                    $("#dvPreview").show();
                    $("#dvPreview")[0].filters.item("DXImageTransform.Microsoft.AlphaImageLoader").src = $(this).val();
                }
                else {
                    if (typeof (FileReader) != "undefined") {
                        $("#dvPreview").show();
                        $("#dvPreview").append("<img class='img-responsive'/>");
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $("#dvPreview img").attr("src", e.target.result);
                        }
                        reader.readAsDataURL($(this)[0].files[0]);
                    } else {
                        alert("This browser does not support FileReader.");
                    }
                }
            } else {
                alert("Please upload a valid image file.");
            }
        });
    });
</script>

