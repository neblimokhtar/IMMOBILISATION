@model IMMOBILISATION.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Utilisateur" required="" name="UserName">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" placeholder="Mot de passe" required="" name="password">
        </div>

        <button type="submit" class="btn btn-primary block full-width m-b">Se connecter</button>
    }
</section>
